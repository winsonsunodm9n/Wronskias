<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_md"
    tools:context="com.example.mysocketclienttest.MainActivity" >

    <ImageButton
        android:id="@+id/imageBeepBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageLedBtn"
        android:layout_toRightOf="@+id/imageLedBtn"
        android:src="@drawable/beepclose" />

    <ImageButton
        android:id="@+id/imageLedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ledclose" />

</RelativeLayout>